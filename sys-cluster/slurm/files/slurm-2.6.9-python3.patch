Subject: [PATCH] Make HTML generator scripts Python 3 compatible

---
 doc/html/shtml2html.py |  8 ++++----
 doc/man/man2html.py    | 14 +++++++-------
 2 files changed, 11 insertions(+), 11 deletions(-)

diff --git a/doc/html/shtml2html.py b/doc/html/shtml2html.py
index be7c7cb..64c1762 100755
--- a/doc/html/shtml2html.py
+++ b/doc/html/shtml2html.py
@@ -24,7 +24,7 @@ def include_virtual(matchobj):
 
     if os.access(filename, os.F_OK):
         #print 'Including file', filename
-        lines = file(filename, 'r').read()
+        lines = open(filename, 'r').read()
         return lines
     else:
         return matchobj.group(0)
@@ -65,9 +65,9 @@ def version_rewrite(matchobj):
 for filename in files:
     dirname, basefilename = os.path.split(filename)
     newfilename = basefilename[:-6] + '.html'
-    print 'Converting', filename, '->', newfilename
-    shtml = file(filename, 'r')
-    html = file(newfilename, 'w')
+    print('Converting', filename, '->', newfilename)
+    shtml = open(filename, 'r')
+    html = open(newfilename, 'w')
 
     for line in shtml.readlines():
         line = include_regex.sub(include_virtual, line)
diff --git a/doc/man/man2html.py b/doc/man/man2html.py
index a049c61..17f5971 100755
--- a/doc/man/man2html.py
+++ b/doc/man/man2html.py
