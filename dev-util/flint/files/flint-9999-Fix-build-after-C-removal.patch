-
 bin_PROGRAMS = flint
 noinst_PROGRAMS = flint_test cxx_replace cxx_tokenize
 
diff --git a/configure.ac b/configure.ac
index 09124c8..6a9b092 100644
--- a/configure.ac
+++ b/configure.ac
@@ -60,6 +60,5 @@ AX_BOOST_BASE([1.20.0], [], [AC_MSG_ERROR(
